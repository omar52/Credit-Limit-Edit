<odoo>

    <!--    Form View-->
    <record id="res_partner_inherited_form_view" model="ir.ui.view">
        <field name="name">Res Partner Inherited Form View</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='vat']" position="after">
                <field name="is_credit_limit_disabled" invisible="1"/>

                <!-- Editable only for this group -->
                <field name="credit_limit" groups="credit_limit_edit.editable_credit_limit_group"
                />
                <!-- Read-only for all other users -->
                <field name="credit_limit" readonly="1" groups="!credit_limit_edit.editable_credit_limit_group"
                />
            </xpath>

        </field>
    </record>
</odoo>
